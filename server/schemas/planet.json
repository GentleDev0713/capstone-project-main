{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Planet Schema",
    "required": [
        "id",
        "planetName",
        "planetDescription",
        "planetImgUrl"
    ],
    "properties": {
        "id": {
            "type": "integer",
            "default": 0,
            "title": "The id Schema",
            "examples": [
                1
            ]
        },
        "planetName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 8,
            "title": "The planetName Schema",
            "examples": [
                "Mars"
            ]
        },
        "planetDescription": {
            "type": "string",
            "minLength": 10,
            "title": "The planetDescription Schema",
            "examples": [
                "It's round and red."
            ]
        },
        "planetImgUrl": {
            "type": "string",
            "minLength": 5,
            "title": "The planetImgUrl Schema",
            "examples": [
                "https://planet-img-url.jpg"
            ]
        }
    },
    "examples": [
        {
            "id": 1,
            "planetName": "Mars",
            "planetDescription": "It's round and red.",
            "planetImgUrl": "https://planet-img-url.jpg"
        }
    ]
}